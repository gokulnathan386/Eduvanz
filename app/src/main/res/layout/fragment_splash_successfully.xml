<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragment.SplashSuccessfullyFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="center"
        android:layout_gravity="top"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/loadingFrame"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/loadingImage"
                android:background="@drawable/reveal"

                android:layout_height="250dp">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/limitamount"
            android:layout_below="@+id/loadingFrame"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Congratulations!"
                android:layout_below="@+id/view"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="You have successfully \nreceived a limit of!"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#CC000000"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="25dp"
                android:drawableLeft="@drawable/currency"
                android:textColor="#CC000000"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/buttom_margin">

        <Button
            android:id="@+id/limitactivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Activate your limit" />

        <Button
            android:id="@+id/higeramount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_white"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="Get Higher Limit" />
    </LinearLayout>

</FrameLayout>
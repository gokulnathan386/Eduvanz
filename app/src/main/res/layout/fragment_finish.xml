<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FinishFragment">


   <LinearLayout
       android:layout_width="match_parent"
       android:gravity="center"
       android:layout_marginTop="100dp"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="190dp"
           android:background="@drawable/scanicon"
           android:layout_height="150dp">
       </ImageView>
       <TextView
           android:layout_marginTop="50dp"
           android:layout_width="match_parent"
           android:text="Thank you for your \n  application"
           android:textSize="25dp"
           android:gravity="center"
           android:textStyle="bold"
           android:textColor="#CC000000"
           android:layout_height="wrap_content">
       </TextView>
       <TextView
           android:layout_marginTop="15dp"
           android:layout_width="match_parent"
           android:text="While our team is evaluating \nyour application, you can \nexplore the store."
           android:textSize="15dp"
           android:gravity="center"
           android:textStyle="bold"
           android:layout_height="wrap_content">
       </TextView>


   </LinearLayout>
    <Button
        android:layout_gravity="bottom"
        android:id="@+id/btnSubmitPAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:layout_marginBottom="50dip"
        android:text="@string/continue_name" />
</FrameLayout>
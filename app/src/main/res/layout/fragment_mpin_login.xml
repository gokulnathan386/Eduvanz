<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MPINLoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        >
        <TextView
            android:id="@+id/mobile_default_textview"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:layout_height="@dimen/header_image_height"
            android:text="mPin \nVerification"
            android:textColor="@color/white"
            android:background="@drawable/mpinimage"
            android:gravity="left|center"
            android:textSize="@dimen/spalsh_title_size" />
        <View
            android:id="@+id/view"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_below="@+id/mobile_default_textview"
            android:layout_marginBottom="10dp"
            android:background="@color/teal_200" />
        <TextView
            android:id="@+id/otp_mobiletextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/mobile_default_textview"
            android:text="Enter your mPin"
            android:gravity="center"
            android:textSize="@dimen/opt_message_text_size" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otp_mobiletextview"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/otpET1"
                android:layout_width="@dimen/otp_text_height_width"
                android:layout_height="@dimen/otp_text_height_width"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/otpET2"
                android:layout_width="@dimen/otp_text_height_width"
                android:layout_height="@dimen/otp_text_height_width"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/otpET3"
                android:layout_width="@dimen/otp_text_height_width"
                android:layout_height="@dimen/otp_text_height_width"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/otpET4"
                android:layout_width="@dimen/otp_text_height_width"
                android:layout_height="@dimen/otp_text_height_width"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/otp_mobiletextview">

            <TextView
                android:id="@+id/otp_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:gravity="center"
                android:visibility="invisible"
                android:text="Invalid OTP"
                />

            <TextView
                android:id="@+id/otp_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="invisible"
                android:text="Login Using OTP"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/otp_error"/>

        </LinearLayout>
    </RelativeLayout>








</FrameLayout>
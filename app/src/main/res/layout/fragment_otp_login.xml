<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OtpLoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        >
        <TextView
            android:id="@+id/mobile_default_textview"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:layout_height="@dimen/header_image_height"
            android:text="OTP \nVerification"
            android:background="@drawable/otpimg"
            android:gravity="left|center"
            android:lineHeight="45dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
        <View
            android:id="@+id/view"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_below="@+id/mobile_default_textview"
            android:layout_marginBottom="10dp"
            android:background="@color/teal_200" />

        <TextView
            android:id="@+id/otp_mobiletextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_default_textview"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:drawableRight="@drawable/ic_baseline_edit_24"
            android:gravity="center"
            android:text="@string/otp_mobile_message"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otp_mobiletextview"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/otpET1"
                android:layout_width="@dimen/otp_text_height_width"
                android:layout_height="@dimen/otp_text_height_width"
                android:inputType="number"
                android:maxLength="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/otpET2"
                android:layout_width="@dimen/otp_text_height_width"
                android:layout_height="@dimen/otp_text_height_width"
                android:inputType="number"
                android:maxLength="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:textSize="25dp"/>
            <EditText
                android:id="@+id/otpET3"
                android:layout_width="@dimen/otp_text_height_width"
                android:layout_height="@dimen/otp_text_height_width"
                android:inputType="number"
                android:maxLength="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/otpET4"
                android:layout_width="@dimen/otp_text_height_width"
                android:layout_height="@dimen/otp_text_height_width"
                android:inputType="number"
                android:maxLength="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:textSize="25dp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/otp_mobiletextview">

            <TextView
                android:id="@+id/otp_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:gravity="center"
                android:textSize="12dp"
                android:visibility="invisible"
                android:text="Invalid OTP"
                />
            <Button
                android:id="@+id/otplogindefaultcontinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:textSize="18dp"
                android:background="@drawable/button_background_white"
                android:textAllCaps="false"
                android:text="Resend In 02:00s" />
        </LinearLayout>
    </RelativeLayout>








</FrameLayout>